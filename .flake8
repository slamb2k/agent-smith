[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    backups,
    logs,
    reports,
    data/cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
