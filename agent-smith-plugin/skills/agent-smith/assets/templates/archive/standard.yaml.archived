rules:
  # ============================================================
  # COMMON GROCERY STORES (Australia)
  # ============================================================
  - type: category
    name: Woolworths → Groceries
    patterns: [Woolworths, WOOLWORTHS]
    category: Food & Dining > Groceries
    confidence: 95

  - type: category
    name: Coles → Groceries
    patterns: [Coles, COLES]
